{%block contenido%}
    <a href="{{path('admin_categoria_nuevo')}}" class="btn btn-small btn-primary">Nueva categoria</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Prioridad</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            {%for categoria in categorias%}
